{
	"manifest_version": 3,
	"name": "JSONTool",
	"version": "0.4.0",
	"description": "JSON 格式化、对比、表格化、排序、历史缓存。",
	"action": {
		"default_title": "JSONTool",
		"default_icon": {
			"16": "icons/icon24.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon24.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_page": "index.html",
	"background": {
		"service_worker": "src/background.js",
		"type": "module"
	},
	"permissions": ["storage"]
}
